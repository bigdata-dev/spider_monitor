<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
     <class name="com.ryxc.core.entity.ConfigParam" table="config_param">
        <id name="id" type="java.lang.Integer"> 
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="style" type="java.lang.String">
            <column name="style" length="16" />
        </property>
        <property name="name" type="java.lang.String">
            <column name="name" length="64" />
        </property>
        <property name="value" type="text">
            <column name="value"/>
        </property>        
        <property name="showOrder" type="java.lang.Integer">
            <column name="show_order"/>
        </property> 
        <property name="remark" type="java.lang.String">
            <column name="remark" length="32" />
        </property>                
    </class>
</hibernate-mapping>
